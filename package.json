  "bugs": {
    "url": "https://github.com/hiro-hh/react-ts-node-socket-server/issues"
  },
  "homepage": "https://github.com/hiro-hh/react-ts-node-socket-server#readme",
  "devDependencies": {
     "rimraf": "^3.0.2"
  }
}
